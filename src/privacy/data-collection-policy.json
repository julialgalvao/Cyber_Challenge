{
  "version": 1,
  "scopes": {
    "signup": [
      "name",
      "email",
      "password"
    ],
    "login": [
      "email",
      "password"
    ],
    "profile.update": [
      "displayName",
      "avatarUrl"
    ],
    "telemetry": [
      "event",
      "timestamp",
      "anonymizedUserId"
    ]
  },
  "notes": "Only the whitelisted fields by scope may be sent to backend. Any extra field triggers an audit alert."
}